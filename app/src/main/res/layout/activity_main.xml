<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:textAlignment="center" android:id="@+id/constrainMain">
    <TextView
            android:text="ねねっちと単語帳！"
            android:layout_width="391dp"
            android:layout_height="129dp"
            android:id="@+id/textView2" android:textSize="24sp"
            android:textAlignment="center" android:fontFamily="@font/bevan"
            android:background="@drawable/wordstitle"
            android:textColor="@color/color04" android:textStyle="bold"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="181dp"
            android:layout_height="149dp"
            android:id="@+id/buttonQuiz"
            android:background="@drawable/quiz"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup2"/>
    <Button
            android:text="Edit"
            android:layout_width="181dp"
            android:layout_height="149dp"
            android:id="@+id/edit"
            android:background="@drawable/edit"
            android:textAlignment="center" android:textStyle="bold"
            android:textColor="@color/color01" android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintStart_toEndOf="@+id/buttonQuiz"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.48"/>
    <TextView
            android:text="@string/change_color"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/radioGroup2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="385dp"
            android:layout_height="70dp"
            android:id="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp">
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button01" android:layout_weight="1"
                android:background="@drawable/mo7t"/>
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button02" android:layout_weight="1"
                android:background="@drawable/new_game_292"/>
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button03" android:layout_weight="1"
                android:background="@drawable/new_game_301"/>
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button04" android:layout_weight="1"
                android:background="@drawable/sdfhs"/>
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button05" android:layout_weight="1"
                android:background="@drawable/shg"/>
        <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/button06" android:layout_weight="1"
                android:background="@drawable/new_game_317"/>
    </LinearLayout>
    <RadioGroup
            android:layout_width="273dp"
            android:layout_height="92dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/radioGroup2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit">
        <RadioButton
                android:text="@string/radio_button_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
                android:checked="true"/>
        <RadioButton
                android:text="@string/radio_button_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>